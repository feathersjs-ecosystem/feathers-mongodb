{
  "include": [ "src/**/*.ts" ],
  "exclude": ["node_modules/*", "**/*.test.ts"],
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "lib",
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "lib": ["esnext"],
    "esModuleInterop": true,
    "useDefineForClassFields": false,
    "moduleResolution": "node"
  }
}
